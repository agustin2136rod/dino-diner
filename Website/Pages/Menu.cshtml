@page
@model Website.Pages.MenuModel
@{
    ViewData["Title"] = "Menu";
}

<h1>Menu</h1>
<center>
    <button class="MenuButton" id="CombosButton" onclick="CombosClick()">Combos</button>
    <button class="MenuButton" id="EntreesButton" onclick="EntreesClick()">Entrees</button>
    <button class="MenuButton" id="SidesButton" onclick="SidesClick()">Sides</button>
    <button class="MenuButton" id="DrinksButton" onclick="DrinksClick()">Drinks</button>
</center>

<div id="Combos" class="MenuItems">
    <h2>Combos</h2>
    <ol>
        @for (int i = 0; i < Model.Menu.AvailableCombos.Count; i++)
        {
            <div class="menu-item">
                <li>
                    <h4>@Model.Menu.AvailableCombos[i].ToString()</h4>
                </li>
                <ul>
                    <li>
                        Price: $@Model.Menu.AvailableCombos[i].Price
                    </li>
                    <li>
                        Calories: @Model.Menu.AvailableCombos[i].Calories
                    </li>
                    <li>
                        Ingredients: @string.Join(", ", Model.Menu.AvailableCombos[i].Ingredients)
                    </li>
                </ul>

            </div>
        }
    </ol>
</div>


