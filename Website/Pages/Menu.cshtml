<form method="post">
    <h4>Search</h4>

    <input type="text" name="search" value="@Model.searchBar" />
    <input name="search" id="search" value="Search and Filter" type="submit" />

    <h4>Menu Category</h4>
    <div class="menu-category">
        <label>
            <input type="checkbox" value="Combo" checked="@Model.category.Contains("Combo")" name="category" />
            Combo
        </label>

        <label>
            <input type="checkbox" value="Side" checked="@Model.category.Contains("Side")" name="category" />
            Side
        </label>

        <label>
            <input type="checkbox" value="Entree" checked="@Model.category.Contains("Entree")" name="category" />
            Entree
        </label>

        <label>
            <input type="checkbox" value="Drink" checked="@Model.category.Contains("Drink")" name="category" />
            Drink
        </label>
    </div>
    <h4>Price</h4>

    <label>
        Minimum: 
        <input type="number" min="0" max="10" step="0.5" name="minPrice" id="Minimum-Price" value="@Model.minPrice" />
        <br />
    </label>
    <label>
        Maximum:
        <input type="number" min="0" max="10" step="0.5" name="maxPrice" id="maximum-price" value="@Model.maxPrice" />

    </label>
    <div class="checkbox-list">
        <h4>Exclude Ingredients</h4>
        @foreach (string foodIngredient in @Model.Menu.Ingredients)
        {
            <label>
                <input value="@foodIngredient" name="ingredient" checked="@Model.ingredient.Contains(foodIngredient) " type="checkbox" />
                @foodIngredient
            </label>
        }

    </div>
</form>


